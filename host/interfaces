# NAT for lxc
auto lxc-bridge-nat
iface lxc-bridge-nat inet static
    bridge_ports none
    bridge_fd 0
    bridge_maxwait 0
    address 192.168.83.1
    netmask 255.255.255.0
    dns-nameservers 192.168.83.11
    dns-search vaai
